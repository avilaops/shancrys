{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "6244361927756403370"
    }
  },
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "staging",
        "prod"
      ],
      "metadata": {
        "description": "Environment name (dev, staging, prod)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources deployed by this template."
      }
    },
    "uniqueSuffix": {
      "type": "string",
      "defaultValue": "[uniqueString(resourceGroup().id)]",
      "metadata": {
        "description": "Suffix used to guarantee global resource name uniqueness."
      }
    },
    "mongoConnectionString": {
      "type": "securestring",
      "metadata": {
        "description": "Connection string used by the API to connect to MongoDB."
      }
    },
    "mongoDatabaseName": {
      "type": "string",
      "defaultValue": "shancrys",
      "metadata": {
        "description": "MongoDB database name used by the API."
      }
    },
    "jwtSecret": {
      "type": "securestring",
      "metadata": {
        "description": "Secret key used to sign JWT tokens (minimum 32 characters)."
      }
    },
    "rabbitMqHost": {
      "type": "string",
      "defaultValue": "rabbitmq",
      "metadata": {
        "description": "RabbitMQ host name accessed by the API."
      }
    },
    "rabbitMqUser": {
      "type": "string",
      "defaultValue": "guest",
      "metadata": {
        "description": "RabbitMQ username used by the API."
      }
    },
    "rabbitMqPassword": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "RabbitMQ password used by the API."
      }
    },
    "rabbitMqPort": {
      "type": "int",
      "defaultValue": 5672,
      "metadata": {
        "description": "RabbitMQ port used by the API."
      }
    },
    "stripeSecretKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Stripe secret key (leave empty if Stripe is not configured)."
      }
    },
    "stripePublishableKey": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Stripe publishable key (leave empty if Stripe is not configured)."
      }
    },
    "stripeWebhookSecret": {
      "type": "securestring",
      "defaultValue": "",
      "metadata": {
        "description": "Stripe webhook signing secret (leave empty if Stripe is not configured)."
      }
    },
    "stripeCurrency": {
      "type": "string",
      "defaultValue": "brl",
      "metadata": {
        "description": "Default currency code used with Stripe."
      }
    },
    "stripeEnableTestMode": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Indicates whether Stripe test mode is enabled."
      }
    },
    "apiImageTag": {
      "type": "string",
      "defaultValue": "latest",
      "metadata": {
        "description": "Container image tag to deploy for the API."
      }
    },
    "apiCpu": {
      "type": "string",
      "defaultValue": "[if(equals(parameters('environment'), 'prod'), '1.0', '0.5')]",
      "metadata": {
        "description": "CPU cores reserved per replica for the API container."
      }
    },
    "apiMemory": {
      "type": "string",
      "defaultValue": "[if(equals(parameters('environment'), 'prod'), '2Gi', '1Gi')]",
      "metadata": {
        "description": "Memory allocated per replica for the API container."
      }
    },
    "apiMinReplicas": {
      "type": "int",
      "defaultValue": "[if(equals(parameters('environment'), 'prod'), 2, 1)]",
      "metadata": {
        "description": "Minimum number of API replicas."
      }
    },
    "apiMaxReplicas": {
      "type": "int",
      "defaultValue": "[if(equals(parameters('environment'), 'prod'), 10, 3)]",
      "metadata": {
        "description": "Maximum number of API replicas."
      }
    }
  },
  "variables": {
    "appName": "shancrys",
    "suffix": "[format('{0}-{1}', parameters('environment'), parameters('uniqueSuffix'))]",
    "containerRegistryName": "[toLower(format('{0}cr{1}{2}', variables('appName'), parameters('environment'), take(parameters('uniqueSuffix'), 6)))]",
    "containerAppName": "[format('{0}-api-{1}', variables('appName'), variables('suffix'))]",
    "containerAppEnvName": "[format('{0}-env-{1}', variables('appName'), variables('suffix'))]",
    "staticWebAppName": "[format('{0}-devtools-{1}', variables('appName'), variables('suffix'))]",
    "storageAccountName": "[toLower(format('{0}st{1}{2}', variables('appName'), parameters('environment'), take(parameters('uniqueSuffix'), 6)))]",
    "storageContainerName": "models",
    "logAnalyticsName": "[format('{0}-logs-{1}', variables('appName'), variables('suffix'))]",
    "appInsightsName": "[format('{0}-insights-{1}', variables('appName'), variables('suffix'))]",
    "tags": {
      "Environment": "[parameters('environment')]",
      "Application": "Shancrys",
      "ManagedBy": "Bicep",
      "CostCenter": "Engineering"
    }
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2023-09-01",
      "name": "[variables('logAnalyticsName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": 30
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02",
      "name": "[variables('appInsightsName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "WorkspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]",
        "publicNetworkAccessForIngestion": "Enabled",
        "publicNetworkAccessForQuery": "Enabled"
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ]
    },
    {
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-11-01-preview",
      "name": "[variables('containerRegistryName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "[if(equals(parameters('environment'), 'prod'), 'Standard', 'Basic')]"
      },
      "properties": {
        "adminUserEnabled": true,
        "publicNetworkAccess": "Enabled"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-05-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "[if(equals(parameters('environment'), 'prod'), 'Standard_ZRS', 'Standard_LRS')]"
      },
      "kind": "StorageV2",
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "allowSharedKeyAccess": true
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2023-05-01",
      "name": "[format('{0}/{1}', variables('storageAccountName'), 'default')]",
      "properties": {},
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-05-01",
      "name": "[format('{0}/{1}/{2}', variables('storageAccountName'), 'default', variables('storageContainerName'))]",
      "properties": {
        "publicAccess": "None"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('storageAccountName'), 'default')]"
      ]
    },
    {
      "type": "Microsoft.App/managedEnvironments",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppEnvName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "properties": {
        "appLogsConfiguration": {
          "destination": "log-analytics",
          "logAnalyticsConfiguration": {
            "customerId": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2023-09-01').customerId]",
            "sharedKey": "[listKeys(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName')), '2023-09-01').primarySharedKey]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsName'))]"
      ]
    },
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2024-03-01",
      "name": "[variables('containerAppName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]",
        "configuration": {
          "activeRevisionsMode": "Single",
          "ingress": {
            "external": true,
            "targetPort": 5000,
            "allowInsecure": false,
            "traffic": [
              {
                "latestRevision": true,
                "weight": 100
              }
            ]
          },
          "registries": [
            {
              "server": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('containerRegistryName')), '2023-11-01-preview').loginServer]",
              "username": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', variables('containerRegistryName')), '2023-11-01-preview').username]",
              "passwordSecretRef": "registry-password"
            }
          ],
          "secrets": [
            {
              "name": "registry-password",
              "value": "[listCredentials(resourceId('Microsoft.ContainerRegistry/registries', variables('containerRegistryName')), '2023-11-01-preview').passwords[0].value]"
            },
            {
              "name": "mongodb-connection",
              "value": "[parameters('mongoConnectionString')]"
            },
            {
              "name": "jwt-secret",
              "value": "[parameters('jwtSecret')]"
            },
            {
              "name": "storage-connection",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};AccountKey={1};EndpointSuffix={2}', variables('storageAccountName'), listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-05-01').keys[0].value, environment().suffixes.storage)]"
            },
            {
              "name": "rabbitmq-password",
              "value": "[parameters('rabbitMqPassword')]"
            },
            {
              "name": "stripe-secret",
              "value": "[parameters('stripeSecretKey')]"
            },
            {
              "name": "stripe-publishable",
              "value": "[parameters('stripePublishableKey')]"
            },
            {
              "name": "stripe-webhook",
              "value": "[parameters('stripeWebhookSecret')]"
            }
          ]
        },
        "template": {
          "containers": [
            {
              "name": "shancrys-api",
              "image": "[format('{0}/shancrys-api:{1}', reference(resourceId('Microsoft.ContainerRegistry/registries', variables('containerRegistryName')), '2023-11-01-preview').loginServer, parameters('apiImageTag'))]",
              "resources": {
                "cpu": "[json(parameters('apiCpu'))]",
                "memory": "[parameters('apiMemory')]"
              },
              "env": "[concat(createArray(createObject('name', 'ASPNETCORE_ENVIRONMENT', 'value', if(equals(parameters('environment'), 'prod'), 'Production', 'Development')), createObject('name', 'MongoDb__ConnectionString', 'secretRef', 'mongodb-connection'), createObject('name', 'MongoDb__DatabaseName', 'value', parameters('mongoDatabaseName')), createObject('name', 'JwtSettings__SecretKey', 'secretRef', 'jwt-secret'), createObject('name', 'JwtSettings__Issuer', 'value', 'shancrys-api'), createObject('name', 'JwtSettings__Audience', 'value', 'shancrys-clients'), createObject('name', 'AzureStorage__ConnectionString', 'secretRef', 'storage-connection'), createObject('name', 'APPLICATIONINSIGHTS_CONNECTION_STRING', 'value', reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').ConnectionString)), createArray(createObject('name', 'RabbitMQ__HostName', 'value', parameters('rabbitMqHost')), createObject('name', 'RabbitMQ__Port', 'value', string(parameters('rabbitMqPort'))), createObject('name', 'RabbitMQ__UserName', 'value', parameters('rabbitMqUser')), createObject('name', 'RabbitMQ__Password', 'secretRef', 'rabbitmq-password')), createArray(createObject('name', 'Stripe__SecretKey', 'secretRef', 'stripe-secret'), createObject('name', 'Stripe__PublishableKey', 'secretRef', 'stripe-publishable'), createObject('name', 'Stripe__WebhookSecret', 'secretRef', 'stripe-webhook'), createObject('name', 'Stripe__Currency', 'value', parameters('stripeCurrency')), createObject('name', 'Stripe__EnableTestMode', 'value', string(parameters('stripeEnableTestMode')))))]"
            }
          ],
          "scale": {
            "minReplicas": "[parameters('apiMinReplicas')]",
            "maxReplicas": "[parameters('apiMaxReplicas')]",
            "rules": [
              {
                "name": "http-scaling",
                "http": {
                  "metadata": {
                    "concurrentRequests": "100"
                  }
                }
              }
            ]
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Insights/components', variables('appInsightsName'))]",
        "[resourceId('Microsoft.App/managedEnvironments', variables('containerAppEnvName'))]",
        "[resourceId('Microsoft.ContainerRegistry/registries', variables('containerRegistryName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Web/staticSites",
      "apiVersion": "2023-12-01",
      "name": "[variables('staticWebAppName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "Free",
        "tier": "Free"
      },
      "properties": {
        "repositoryUrl": "https://github.com/avilaops/shancrys",
        "branch": "main",
        "buildProperties": {
          "appLocation": "/devtools",
          "apiLocation": "",
          "outputLocation": "dist"
        }
      }
    }
  ],
  "outputs": {
    "apiUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.App/containerApps', variables('containerAppName')), '2024-03-01').configuration.ingress.fqdn)]"
    },
    "containerAppName": {
      "type": "string",
      "value": "[variables('containerAppName')]"
    },
    "devtoolsUrl": {
      "type": "string",
      "value": "[format('https://{0}', reference(resourceId('Microsoft.Web/staticSites', variables('staticWebAppName')), '2023-12-01').defaultHostname)]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "storageContainerName": {
      "type": "string",
      "value": "[variables('storageContainerName')]"
    },
    "containerRegistryLoginServer": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.ContainerRegistry/registries', variables('containerRegistryName')), '2023-11-01-preview').loginServer]"
    },
    "appInsightsInstrumentationKey": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').InstrumentationKey]"
    },
    "appInsightsConnectionString": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Insights/components', variables('appInsightsName')), '2020-02-02').ConnectionString]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[resourceGroup().name]"
    }
  }
}