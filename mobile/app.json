{
  "expo": {
    "name": "Shancrys BIM",
    "slug": "shancrys-bim",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.shancrys.bim",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Permitir acesso à câmera para tirar fotos da obra e documentar o progresso do projeto.",
        "NSPhotoLibraryUsageDescription": "Permitir acesso às fotos para adicionar imagens aos projetos e materiais.",
        "NSPhotoLibraryAddUsageDescription": "Permitir salvar fotos da obra na biblioteca de fotos.",
        "NSLocationWhenInUseUsageDescription": "Permitir acesso à localização para identificar a posição dos projetos no mapa.",
        "NSMicrophoneUsageDescription": "Permitir acesso ao microfone para gravação de notas de voz sobre o projeto."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563eb"
      },
      "package": "com.shancrys.bim",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "shancrys-bim-mobile"
      }
    },
    "owner": "shancrys"
  }
}