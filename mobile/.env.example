# ============================================
# SHANCRYS BIM - MOBILE APP ENVIRONMENT
# ============================================
# Copie este arquivo para .env e preencha com suas credenciais

# ============================================
# BACKEND API
# ============================================
EXPO_PUBLIC_API_URL=http://localhost:5000/api

# ============================================
# AZURE SERVICES
# ============================================
# Azure Container Registry
ACR_USERNAME=your_acr_username
ACR_PASSWORD=your_acr_password

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_MODEL=gpt-4

# Azure Authentication
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_SUBSCRIPTION_ID=your_subscription_id

# Azure Blob Storage (for BIM files)
EXPO_PUBLIC_AZURE_BLOB_URL=https://your-storage.blob.core.windows.net

# ============================================
# DATABASE
# ============================================
MONGO_ATLAS_URI=mongodb+srv://user:password@cluster.mongodb.net/

# ============================================
# AI SERVICES
# ============================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Hugging Face
HF_TOKEN=hf_your_hugging_face_token

# ============================================
# PAYMENT
# ============================================
STRIPE_API=sk_test_your_stripe_key

# ============================================
# DEVELOPMENT
# ============================================
GITHUB_TOKEN=ghp_your_github_token
